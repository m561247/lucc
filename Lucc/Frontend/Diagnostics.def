#ifndef DIAG
#define DIAG(diag_code, diag_class, diag_msg)
#endif

DIAG(lexing_failed, error, "Lexing failed")
DIAG(preprocessing_failed, error, "Preprocessing failed")
DIAG(parsing_failed, error, "Parsing failed")

//lexing diagnostics
DIAG(invalid_number_literal, error, "Invalid number literal")
DIAG(invalid_token, error, "Invalid token")

//preprocessing diagnostics
DIAG(defined_misplaced, error, "Stray #defined")
DIAG(header_name_error, error, "Invalid header name")

//parsing diagnostics
DIAG(function_params_not_closed, error, "Function parameters not closed")
DIAG(array_brackets_not_closed, error, "Array brackets not closed")
DIAG(function_params_missing_coma, error, "Missing coma in function parameters declaration")
DIAG(variadic_params_not_last, error, "Variadic parameters have to be last parameter")
DIAG(storage_specifier_forbidden_context, error, "Storage specifier in a forbidden context")
DIAG(missing_function_name, error, "Function name is missing")
DIAG(redeclared_but_different_type, error, "Symbol is redeclared but with a different type")
DIAG(redefinition_of_function, error, "Function is being redefined")
DIAG(storage_specifier_mismatch, error, "Storage specifier doesn't match the previous declaration")
DIAG(expected_function_definition, error, "Expected function definition")
DIAG(return_in_file_scope, error, "Return statement can only appear inside function definition")
DIAG(return_type_mismatch, error, "Type of return statement doesn't agree with return type of a function")
DIAG(if_condition_not_in_parentheses, error, "If condition should be surrounded with parentheses")
DIAG(while_condition_not_in_parentheses, error, "While condition should be surrounded with parentheses")
DIAG(expected_semicolon, error, "Expected semicolon after expression statement")
DIAG(unexpected_token, error, "Unexpected token")

#undef DIAG